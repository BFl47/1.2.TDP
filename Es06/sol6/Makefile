FILE_NAME_TEST=e6_test
FILE_NAME_ESERCIZIO_RICORSIONE=e6_recursive
FILE_NAME_ESERCIZIO_FILE=e6_files
FILE_NAME_UTILS=e6_utils


all: $(FILE_NAME_TEST)

$(FILE_NAME_TEST): $(FILE_NAME_TEST).o $(FILE_NAME_ESERCIZIO_RICORSIONE).o $(FILE_NAME_ESERCIZIO_FILE).o $(FILE_NAME_UTILS).o
	g++ -o $(FILE_NAME_TEST) $(FILE_NAME_TEST).o $(FILE_NAME_ESERCIZIO_RICORSIONE).o $(FILE_NAME_ESERCIZIO_FILE).o $(FILE_NAME_UTILS).o

$(FILE_NAME_TEST).o: $(FILE_NAME_TEST).c $(FILE_NAME_ESERCIZIO_RICORSIONE).h $(FILE_NAME_ESERCIZIO_FILE).h $(FILE_NAME_UTILS).h
	g++ -c $(FILE_NAME_TEST).c

$(FILE_NAME_ESERCIZIO_RICORSIONE).o: $(FILE_NAME_ESERCIZIO_RICORSIONE).c $(FILE_NAME_ESERCIZIO_RICORSIONE).h 
	g++ -c $(FILE_NAME_ESERCIZIO_RICORSIONE).c -lm

$(FILE_NAME_ESERCIZIO_FILE).o: $(FILE_NAME_ESERCIZIO_FILE).c $(FILE_NAME_ESERCIZIO_FILE).h 
	g++ -c $(FILE_NAME_ESERCIZIO_FILE).c

$(FILE_NAME_UTILS).o: $(FILE_NAME_UTILS).c $(FILE_NAME_UTILS).h 
	g++ -c $(FILE_NAME_UTILS).c -lm


clean:
	rm -rf $(FILE_NAME_TEST).o $(FILE_NAME_TEST) $(FILE_NAME_ESERCIZIO_RICORSIONE).o $(FILE_NAME_ESERCIZIO_FILE).o $(FILE_NAME_UTILS).o *~
